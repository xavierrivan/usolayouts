<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="usolayouts.GridLayoutPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <BoxView Color="Red" Grid.Row="0" Grid.Column="0" />
        <BoxView Color="Green" Grid.Row="0" Grid.Column="1" />
        <BoxView Color="Blue" Grid.Row="1" Grid.Column="0" />
        <StackLayout Grid.Row="1" Grid.Column="1">
            <BoxView Color="Yellow" />
            <Button Text="Go to StackLayout"
                    Clicked="OnStackLayoutButtonClicked" />
        </StackLayout>
    </Grid>
</ContentPage>
