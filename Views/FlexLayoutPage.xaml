<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="usolayouts.FlexLayoutPage">
    <FlexLayout Direction="Column">
        <Frame>
            <FlexLayout Direction="Row">
                <Image Source="your_image_source.png" WidthRequest="50" HeightRequest="50">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnImageTapped" />
                    </Image.GestureRecognizers>
                </Image>
                <Label Text="Item 1" VerticalOptions="Center" />
            </FlexLayout>
        </Frame>
        <Frame>
            <FlexLayout Direction="Row">
                <Image Source="your_image_source.png" WidthRequest="50" HeightRequest="50">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnImageTapped" />
                    </Image.GestureRecognizers>
                </Image>
                <Label Text="Item 2" VerticalOptions="Center" />
            </FlexLayout>
        </Frame>
        <!-- Repeat as needed -->
    </FlexLayout>
</ContentPage>
